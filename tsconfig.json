{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/src/*": [
        "./*"
      ],
      "@/controllers/*": [
        "./controllers/*"
      ],
      "@/settings/*": [
        "./settings/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/helpers/*": [
        "./helpers/*"
      ],
    },
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}