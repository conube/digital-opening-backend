{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/src/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/controllers/*": [
        "./app/controllers/*"
      ],
      "@/settings/*": [
        "./settings/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/helpers/*": [
        "./app/helpers/*"
      ],
      "@/errors/*": [
        "./app/errors/*"
      ],
      "@/abstracts/*": [
        "./app/abstracts/*"
      ],
      "@/interfaces/*": [
        "./interfaces/*"
      ],
    },
  },
  "target": "es5",
  "module": "commonjs",
  "lib": [
    "es6"
  ],
  "allowJs": true,
  "outDir": "build",
  "rootDir": "src",
  "strict": true,
  "noImplicitAny": true,
  "esModuleInterop": true,
  "resolveJsonModule": true
}