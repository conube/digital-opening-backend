{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "build",
    "paths": {
      "@/src/*": [
        "./*"
      ],
      "@/settings/*": [
        "./settings/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/interfaces/*": [
        "./interfaces/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/controllers/*": [
        "./app/controllers/*"
      ],
      "@/adapters/*": [
        "./app/adapters/*"
      ],
      "@/helpers/*": [
        "./app/helpers/*"
      ],
      "@/routers/*": [
        "./app/routers/*"
      ],
      "@/errors/*": [
        "./app/errors/*"
      ],
      "@/abstracts/*": [
        "./app/abstracts/*"
      ],
      "@/services/*": [
        "./app/services/*"
      ]
    },
  },
  "target": "es5",
  "module": "commonjs",
  "lib": [
    "es6"
  ],
  "include": [
    "src/**/*.*"
  ],
  "allowJs": true,
  "strict": true,
  "noImplicitAny": true,
  "esModuleInterop": true,
  "resolveJsonModule": true
}